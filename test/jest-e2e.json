{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/../src/$1",
    "^@/gitlab/(.*)$": "<rootDir>/../src/gitlab/$1",
    "^@/slack/(.*)$": "<rootDir>/../src/slack/$1",
    "^@/ai/(.*)$": "<rootDir>/../src/ai/$1",
    "^@/common/(.*)$": "<rootDir>/../src/common/$1",
    "^@test/(.*)$": "<rootDir>/$1"
  }
}
